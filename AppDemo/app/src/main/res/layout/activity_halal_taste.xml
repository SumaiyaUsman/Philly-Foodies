<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/beige"
    tools:ignore="ExtraText">

    <!--Authored by Andersen Hu 5/24/24-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:fontFamily="@font/heycomic"
        android:gravity="center"
        android:text="@string/halaltaste"
        android:textColor="#f0a732"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="554dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextTextText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chicken over Rice\nChicken Gyro\nChicken Salad\nLamb over Rice\nLamb Gyro\nLamb Salad\nFalafel over Rice\nFalafel Gyro\nFalafel Salad\nFish over Rice\nFish Gyro    \nFish Salad\nCh. Kebab over Rice\nCh. Kebab Gyro\nCh. Kebab Salad\nShrimp over Rice\nCombo Platter\nCombo Gyro\nCombo Salad\nChickpeas and Rice\nSamosa Chaat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$10.00\n$8.00\n$10.00\n$10.00\n$8.00\n$10.00\n$10.00\n$8.00\n$10.00\n$10.00\n$8.00\n$10.00\n$8.00\n$10.00\n$10.00\n$10.00\n$10.00\n$8.00\n$10.00\n$10.00\n$10.00"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>