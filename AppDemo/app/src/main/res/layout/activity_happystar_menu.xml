<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/beige">

    <!--Mod by Sumaiya Usman 5/23/24-->
    <!--Mod by Chaeyoon Song 5/24/24-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:text="@string/HappyStar"
        android:textColor="#f0a732"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/heycomic" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:textSize="25sp"
        android:textStyle="bold"
        android:inputType="text"
        android:text="Platters" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plain Lo Mein\nChicken Lo Mein\nBeef Lo Mein\nShrimp Lo Mein\nPepper Steak\nPlain Broccoli\nChicken Broccoli\nBeef Broccoli\nShrimp Broccoli\nSpicy Chicken\nSpicy Pork\nTeriyaki Chicken\nGeneral Tso Chicken\nPlain Fried Rice\nChicken Fried Rice\nBeef Fried Rice\nShrimp Fried Rice"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$6.00\n$7.00\n$8.00\n$8.00\n$8.00\n$6.00\n$7.00\n$8.00\n$8.00\n$8.00\n$8.00\n$8.00\n$8.00\n$5.00\n$6.00\n$7.00\n$7.00"
            android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>