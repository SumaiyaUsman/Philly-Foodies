<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/beige">

    <!--From Youtube 'DJ Malone - Android RecyclerView + Room Database Tutorial' 5/30/24-->
    <!--Mod by Sumaiya Usman 5/30/24-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Food Truck"
        android:textSize="24sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/truck_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Truck Name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/truck_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/truck_cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cuisine Type"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_truck_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Truck"
        android:backgroundTint="#ee6358"/>

</LinearLayout>