<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainActivity">

    <!--Author: Chaeyoon Song 5/30/24    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_margin="16dp"
        android:layout_weight="90"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Horizontal LinearLayout for Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="125dp">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:src="@drawable/hotdog" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:src="@drawable/icecream" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:src="@drawable/taco" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:src="@drawable/hamburger" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:src="@drawable/wings" />
        </LinearLayout>

        <TextView
            android:id="@+id/app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/helloroti"
            android:text="Welcome to                                                 Philly Foodies!"
            android:textAlignment="center"
            android:textColor="#f0a732"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/app_description_truck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="• Click the 'Trucks' to view a list of food trucks. Clicking food truck names will show their menus."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/app_description_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="• Use the 'Map' to find food truck locations.                     The navigation function is ready, and you can also check the menu."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/app_description_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Check out the 'Post' to see user-uploaded posts and share your own experiences."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <android.widget.Button
            android:id="@+id/btn_logout"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_round"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
